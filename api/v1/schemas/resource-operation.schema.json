{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes the server response after CRUD operations",
  "properties": {
    "success": {
      "type": "boolean"
    },
    "status": {
      "type": "integer"
    },
    "href": {
      "type": "string",
      "description": "Reference to the resource that was created or updated"
    },
    "message": {
      "type": "string"
    }
  },
  "required": [
    "success",
    "status"
  ]
}